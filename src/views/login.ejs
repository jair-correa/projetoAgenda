<%-include('includes/head'); %> <%-include('includes/nav');%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta ou acesse</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
    
      <%- include('includes/messages'); %>
    
      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Preencha os formularios para cadastro</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <type></type>
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">
              Criate Account
            </button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Acessar</h4>
          <p>Faca seu login abaixo</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="form-group">
              <label>Your password</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">Enter Account</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%-include('includes/footer');%>
